<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Choose your Preferences"
                android:textSize="40sp" />

            <LinearLayout
                android:id="@+id/time_linar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/timetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="App install Time"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/timespinner_min"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:dropDownSelector="#e04880"
                    android:spinnerMode="dialog"
                    android:textColor="#e6eff7"
                    android:textSize="20dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/net_linar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nettitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Flow more than"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/netspinner_min"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:dropDownSelector="#e04880"
                    android:spinnerMode="dialog"
                    android:textColor="#e6eff7"
                    android:textSize="20dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/size_linar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/sizetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Size more than"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/sizespinner_min"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:dropDownSelector="#e04880"
                    android:spinnerMode="dialog"
                    android:textColor="#e6eff7"
                    android:textSize="20dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_linar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/netupload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Net Upload" />

                <Button
                    android:id="@+id/sizeupload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Size Upload" />

                <Button
                    android:id="@+id/memupload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mem Upload" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>