<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#959b9e"
                android:centerY="0.5"
                android:endColor="#959b9e"
                android:startColor="#959b9e" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:endColor="#68abd1"
                    android:startColor="#68abd1" />
            </shape>
        </clip>
    </item>

</layer-list>